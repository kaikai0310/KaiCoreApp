<!-- JTV Home Slider -->
<div class="jtv-slideshow">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-md-push-3 col-sm-12">
                <div id='jtv-rev_slider_wrapper' class='rev_slider_wrapper fullwidthbanner-container'>
                    <!--Lặp slides-->
                    <div id='jtv-rev_slider' class='rev_slider fullwidthabanner'>
                        <ul>
                            @foreach (var slide in Model.HomeSlides)
                            {
                                <li data-transition='fade' data-slotamount='7' data-masterspeed='1000'>
                                    <img src="@slide.Image" alt="@slide.Name" data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' />
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <!-- end JTV Home Slider -->
            <!-- hot deal products -->
            <div class="col-md-3 hot-deal col-md-pull-9 col-sm-5">
                <div class="slider-items-products">
                    <div id="hot-deal-slider" class="product-flexslider hidden-buttons">
                        <div class="slider-items slider-width-col4">
                            @foreach (var hotProduct in Model.HotProducts)
                            {
                                <div class="item">
                                    <div class="item-inner">
                                        <div class="item-img">
                                            <div class="item-img-info">
                                                <a href="/@hotProduct.SeoAlias-p.@(hotProduct.Id).html" title="@hotProduct.Name" class="product-image">
                                                    <img src="@hotProduct.Image" alt="@hotProduct.Name" width="268px" height="268px">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="item-info">
                                            <div class="info-inner">
                                                <div class="item-title"> <a href="/@hotProduct.SeoAlias-p.@(hotProduct.Id).html" title="Product Title Here"> @hotProduct.Name</a></div>
                                                <div class="item-content">
                                                   
                                                    <div class="item-price">
                                                        <div class="price-box"> <span class="regular-price"> <span class="price">@hotProduct.Price.ToString("N0") Đồng</span> </span> </div>
                                                    </div>
                                                    <div class="action">
                                                        <button data-original-title="Add to Cart" data-id="@hotProduct.Id" type="button" class="button btn-cart"><span>Thêm vào giỏ hàng</span> </button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="jtv-box-timer">
                                                <div class="countbox_1 timer-grid"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content-page">
    <div class="container">
        <!-- Product Tabs-->
        <div class="category-product">
            <div class="navbar nav-menu">
                <div class="navbar-collapse">
                    <div class="jtv-title">
                        <h2>Sản phẩm nổi bật</h2>
                    </div>
                    <ul class="nav navbar-nav">
                        @for (var i = 0; i < Model.HomeCategories.Count; i++)
                        {
                            var item = Model.HomeCategories[i];
                            if (i == 0)
                            {
                                <li class="active"><a data-toggle="tab" href="#@item.SeoAlias">@item.Name</a> </li>
                            }
                            else
                            {
                                <li><a data-toggle="tab" href="#@item.SeoAlias">@item.Name</a> </li>
                            }
                        }
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <div class="tab-container">
                <!-- tab product -->
                @for (var i = 0; i < Model.HomeCategories.Count; i++)
                {
                    var category = Model.HomeCategories[i];
                    string css = string.Empty;
                    if (i == 0)
                    {
                        css = "tab-panel active";
                    }
                    else
                    {
                        css = "tab-panel";
                    }

                    <div class="@css" id="@category.SeoAlias">
                        <div class="category-products">
                            <ul class="products-grid">
                                @foreach (var item in category.Products)
                                {
                                    <li class="item col-lg-3 col-md-3 col-sm-4 col-xs-6">
                                        <div class="item-inner">
                                            <div class="item-img">
                                                <div class="item-img-info">
                                                    <a class="product-image" title="@item.Name" href="/@item.SeoAlias-p.@(item.Id).html"> <img alt="@item.Name" src="@item.Image" width="268px" height="268px"> </a>
                                                    <div class="jtv-box-hover">
                                                        <ul class="add-to-links">
                                                            <li><a class="link-quickview" href="#"><i class="icon-magnifier-add icons"></i><span class="hidden">Xem nhanh</span></a></li>
                                                            <li><a class="link-wishlist" href="#"><i class="icon-heart icons"></i><span class="hidden">Wishlist</span></a></li>
                                                            <li><a class="link-compare" href="#"><i class="icon-shuffle icons"></i><span class="hidden">Compare</span></a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="item-info">
                                                <div class="info-inner">
                                                    <div class="item-title"> <a title="@item.Name" href="/@item.SeoAlias-p.@(item.Id).html"> @item.Name </a> </div>
                                                    <div class="item-content">
                                                        <div class="rating"> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> </div>
                                                        <div class="item-price">
                                                            <div class="price-box"> <span class="regular-price"> <span class="price">@item.Price.ToString("N0") Đồng</span> </span> </div>
                                                        </div>
                                                        <div class="action">
                                                            <button class="button btn-cart" type="button" data-id="@item.Id" data-original-title="Add to Cart"><span>Thêm vào giỏ hàng</span> </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

