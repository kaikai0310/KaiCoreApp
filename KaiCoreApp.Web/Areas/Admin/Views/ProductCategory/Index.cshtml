@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

@section Styles{
    <link href="~/lib/jquery-easyui-1.8.8/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jquery-easyui-1.8.8/themes/icon.css" rel="stylesheet" />
}

@section Script{
    <script src="~/lib/jquery-easyui-1.8.8/jquery.easyui.min.js"></script>
    <script src="~/app/controllers/product-category/index.js" asp-append-version="true"></script>

    <script>
        var productCate = new productCategoryController();
        productCate.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3>Danh mục sản phẩm</h3>
    </div>

    <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right">
            <button class="btn btn-success" id="btnCreate" type="button">Tạo mới</button>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <ul id="treeProductCate"></ul>
                <div id="contextMenu" class="easyui-menu" style="width:120px;">
                    <div id="btnEdit" data-options="iconCls:'icon-edit'">Sửa</div>
                    <div id="btnDelete" data-options="iconCls:'icon-remove'">Xóa</div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_AddEditModal.cshtml")